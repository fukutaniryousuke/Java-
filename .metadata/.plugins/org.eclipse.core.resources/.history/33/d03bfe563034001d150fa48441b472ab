package jp.example;


public class main {
	public static void main(String[] args) {
		//1.勇者を生成
		Hero h = new Hero();
		h.name = "ミナト";
		h.hp = 100;
		
		//おばけキノコを生成
		Matango m1 = new Matango();
		m1.hp = 50;
		m1.suffix = 'A';
		
		Matango m2 = new Matango();
		m2.hp = 50;
		m2.suffix = 'A';
		
		//冒険の始まり
		h.slip();
		m1.run();
		m2.run();
		h.run();
		//以下の内容をJavaで記述していく
		//勇者よ、この仮想世界に生まれよ！
		//勇者よ、戦え！
		//おばけキノコよ、逃げろ！
	}
}
